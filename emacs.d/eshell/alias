alias mntusb sudo mount -t vfat /dev/sdb1 /media/external -o uid=1000,gid=1000,utf8,dmask=027,fmask=137
alias sudo *sudo $*
alias acsh apt-cache show $*
alias acse apt-cache search $*
alias ff find-file $1
alias ll ls -l $1
alias d dired $1
alias top proced
alias sagup sudo apt-get update
alias sagug sudo apt-get upgrade
alias sagpu sudo apt-get purge $*
alias sagi sudo apt-get install $*
alias upgr sudo apt-get update && sudo apt-get upgrade
alias sagar sudo apt-get autoremove
