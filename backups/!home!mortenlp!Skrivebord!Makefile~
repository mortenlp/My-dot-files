SYSTEM     = x86_rhel4.0_3.4
LIBFORMAT  = static_pic

CPLEXDIR      = /opt/ilog2006/cplex100

# ---------------------------------------------------------------------
# Compiler selection
# ---------------------------------------------------------------------

CC  = gcc

# ---------------------------------------------------------------------
# Compiler options
# ---------------------------------------------------------------------

COPT  = -fPIC

# ---------------------------------------------------------------------
# Link options and libraries
# ---------------------------------------------------------------------

CPLEXBINDIR   = $(CPLEXDIR)/bin/$(BINDIST)
CPLEXLIBDIR   = $(CPLEXDIR)/lib/$(SYSTEM)/$(LIBFORMAT)

CLNFLAGS  = -L$(CPLEXLIBDIR) -lcplex -m32 -lm -lpthread

CPLEXINCDIR   = $(CPLEXDIR)/include

CFLAGS  = $(COPT)  -I$(CPLEXINCDIR)

# ------------------------------------------------------------

clean :
	/bin/rm -rf *.o *~ *.class
	/bin/rm -rf $(C_EX) $(CPP_EX)
	/bin/rm -rf *.mps *.ord *.sos *.lp *.sav *.net *.msg *.log *.clp

# ------------------------------------------------------------

arki001: arki001.o
	$(CC) $(CFLAGS) arki001.o -o arki001 $(CLNFLAGS)
example.o: ./arki001.c
	$(CC) -c $(CFLAGS) ./arki001.c -o arki001.o
