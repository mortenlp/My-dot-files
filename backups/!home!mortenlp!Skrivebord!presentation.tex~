\section{The basic heuristics}

\subsection{}

\begin{frame}
  \frametitle{Iterated local search (ILS)}
\begin{columns}
\column{.5\textwidth}
\begin{enumerate}[{Step} 1]
\item Let a start solution $x_B$ be given and let $x_C=x_B$.
\item Make a local search and update $x_B$. If the stop criterion
  has been reached, then STOP.
\item Else, reset $x_C$ if necessary. Make a perturbation of $x_C$ and
  return to Step 2.
\end{enumerate}
\column{.5\textwidth}
\begin{figure}[htpb]
\centering
\includegraphics[scale=0.27]{ils.pdf}
\caption{Iterated local search. Picture taken from \cite{Congram}.
}
\end{figure}

\end{columns}

\end{frame}

\subsection{}

